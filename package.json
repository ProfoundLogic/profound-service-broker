{
  "name": "service-broker",
  "version": "1.0.0",
  "description": "Profound Logic Service Broker",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ProfoundLogic/profound-service-broker.git"
  },
  "keywords": [],
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && tsc && cp -R src/assets dist/assets && cp -R src/certs dist/certs",
    "start": "yarn clean && tsc && cp -R src/assets dist/assets && cp -R src/certs dist/certs && node dist/src/app.js",
    "start:dev": "nodemon --signal SIGINT --nolazy --watch src --exec 'node --inspect=0.0.0.0:9229 --require ts-node/register src/app.ts'",
    "watch": "tsc -w",
    "test": "NODE_ENV=development jest --runInBand --detectOpenHandles",
    "test:ci": "jest --passWithNoTests",
    "check-types": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint src/**/*.ts --fix",
    "prettify": "yarn format",
    "format": "prettier --write \"**/*.{ts,tsx,json,css,md}\"",
    "prepare": "husky install",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migrate:create": "yarn typeorm migration:create ./src/db/migrations/osb",
    "migrate:generate": "yarn typeorm migration:generate -d ./src/db/data-source.ts",
    "migrate": "yarn typeorm migration:run -d ./src/db/data-source.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "cron": "^4.3.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "js-base64": "^3.7.7",
    "jsonwebtoken": "^9.0.2",
    "memory-cache": "^0.2.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.5",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.2.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.2",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "nodemon": "^3.1.0",
    "prettier": "^3.3.1",
    "supertest": "7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint --fix",
      "npm run prettify --write"
    ]
  }
}
